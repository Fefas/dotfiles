[color]
  ui = true

[push]
  default = simple

[alias]
  st = status
  co = commit
  ps = push
  ch = checkout
  br = branch
  di = diff
  ds = diff --staged
  ht = log --pretty=format:'%C(auto)%h%Creset  %ad  %s%C(auto)%d%Creset [%an]' --graph --date=short
  htr = log --pretty=format:'%C(auto)%h%Creset  %<(14)%ad  %s%C(auto)%d%Creset [%an]' --graph --date=relative

